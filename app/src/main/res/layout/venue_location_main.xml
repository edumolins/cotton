<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">


        <com.cotton.ui.AvenirTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="DRIVING A PATH TO HEAVEN"
            android:textColor="@color/grey_dark"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/border"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="5dp"
            android:background="@color/grey_dark"></RelativeLayout>

        <com.cotton.ui.AvenirTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border"
            android:layout_marginTop="15dp"
            android:letterSpacing="0.1"
            android:text="The Cotton Beach Club is located above the Cala Tarida Beach 13.3 miles (21.4 km) west of the Ibiza town. The nearest village of Santa Agnès de Corona is 5.2 miles (8.4 km) east of the beach club."
            android:textColor="@color/grey"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/border1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/info_layout"
        android:layout_marginTop="20dp"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border1">

        <RelativeLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/white_row">
            <ImageView
                android:id="@+id/location_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location_blue"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/location_img"
                android:orientation="vertical">

                <com.cotton.ui.AvenirTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="Carrer Posta del Sol, 21"
                    android:textColor="@color/grey_location"
                    android:textSize="12dp" />
                <com.cotton.ui.AvenirTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="07829 Sant Josep de sa Talaia"
                    android:textColor="@color/grey_location"
                    android:textSize="12dp" />
                <com.cotton.ui.AvenirTextView
                    android:id="@+id/booking_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="N 38º56’00” E 11º13’00”"
                    android:textColor="@color/grey_location"
                    android:textSize="12dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/location_layout"
            android:background="@color/grey" />
    </RelativeLayout>
</RelativeLayout>
